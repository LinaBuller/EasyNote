<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addFragmentLayout"
    android:layout_width="match_parent"
    android:background="@color/background_light"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardVChangesStyleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/rcImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/add_images_camera"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="3"

                tools:listitem="@layout/rc_item_image"
                tools:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcViewCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone"
                tools:itemCount="1"
                tools:listitem="@layout/rc_item_category_add_fragment"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvLastChange"
                style="@style/CustomTextViewComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/titleCardViewAddFragment"
                style="@style/CustomCardStyleAddFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/etTitle"
                    style="@style/CustomEditTextAppThemeLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:gravity="center|start"
                    android:hint="@string/title1"
                    android:inputType="textMultiLine|textNoSuggestions|textPersonName"
                    android:minHeight="32dp"
                    android:textIsSelectable="true"
                    android:textStyle="normal"
                    android:typeface="normal"
                    app:barrierMargin="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rcImageView"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/contentCardViewAddFragment"
                style="@style/CustomCardStyleAddFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="76dp">

                <EditText
                    android:id="@+id/etContent"
                    style="@style/CustomEditTextAppThemeLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:autoLink="email"
                    android:autofillHints=""
                    android:clickable="true"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/type_note_here"
                    android:inputType="textAutoCorrect|textMultiLine|textVisiblePassword"
                    android:minHeight="250dp"
                    android:textIsSelectable="true"
                    android:textStyle="normal"
                    android:typeface="normal" />
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVChangesStyleText"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="30dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        style="@style/CustomCardNoMargin"
        app:layout_constraintBottom_toTopOf="@+id/botNView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            app:layout_constraintBottom_toTopOf="@+id/botNView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <CheckBox
                android:id="@+id/btEditTextPanel"
                style="@style/CustomCheckBoxEditTextAddFragment"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <LinearLayout
                android:id="@+id/editTextPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/btEditTextPanel"
                app:layout_constraintStart_toEndOf="@+id/btEditTextPanel"
                app:layout_constraintTop_toTopOf="@+id/btEditTextPanel"
                app:layout_constraintVertical_bias="0.625"
                tools:visibility="visible">

                <ImageButton
                    android:id="@+id/bBold"
                    style="@style/CustomImageButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/editTextPanel"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_format_bold_add_fragment"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/bItalic"
                    style="@style/CustomImageButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="@+id/bBold"
                    app:layout_constraintStart_toEndOf="@+id/bBold"
                    app:layout_constraintTop_toTopOf="@+id/bBold"
                    app:srcCompat="@drawable/ic_format_italic_add_fragment"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/bUnderline"
                    style="@style/CustomImageButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="@+id/bBold"
                    app:layout_constraintStart_toEndOf="@+id/bItalic"
                    app:layout_constraintTop_toTopOf="@+id/bBold"
                    app:srcCompat="@drawable/ic_format_underlined_add_fragment"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/bStrikeline"
                    style="@style/CustomImageButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="@+id/bBold"
                    app:layout_constraintStart_toEndOf="@+id/bUnderline"
                    app:layout_constraintTop_toTopOf="@+id/bBold"
                    app:srcCompat="@drawable/ic_format_strikethrough_add_fragment"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/bListText"
                    style="@style/CustomImageButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="@+id/bBold"
                    app:layout_constraintStart_toEndOf="@+id/bStrikeline"
                    app:layout_constraintTop_toTopOf="@+id/bBold"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_format_list_bulleted_add_fragment"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/bCleanText"
                    style="@style/CustomImageButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="@+id/bBold"
                    app:layout_constraintStart_toEndOf="@+id/bListText"
                    app:layout_constraintTop_toTopOf="@+id/bBold"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_format_clear_add_fragment"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            </LinearLayout>

            <ImageButton
                android:id="@+id/fbSave"
                style="@style/CustomImageButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="end|center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.333"
                app:srcCompat="@drawable/ic_done"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botNView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_add_fragment">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>