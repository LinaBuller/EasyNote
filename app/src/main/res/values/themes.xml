<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MySQLite" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_neo</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/grey</item>
        <item name="backgroundColor">@color/light_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="cardViewStyle">@style/CustomCardView</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="EditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/black</item>
        <item name="background">@drawable/rounded_border_edittext</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomCardView" parent="CardView">
        <item name="android:textColor">@color/black</item>
        <item name="srcCompat">@drawable/image_icon</item>
    </style>

    <style name="CustomImageView" parent="Widget.AppCompat.ImageButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/image_icon</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="rcViewNotes">
        <item name="background">@drawable/rounded_border_rcview_item</item>
    </style>

    <style name="categoryRcview" parent="EditTextStyle">
        <item name="android:background">@drawable/rounded_border_category</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.MySQLite.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MySQLite.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>