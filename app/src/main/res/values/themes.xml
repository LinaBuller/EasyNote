<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="cardStyle" format="reference" />

    <style name="Theme.MySQLite" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="android:textColorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorSecondary">@color/background_light</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">16sp</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="iconTint">@color/dark_gray</item>
        <item name="android:fontFamily">@font/typold</item>
        <!-- <item name="buttonStyle">@style/CustomButton</item>-->
        <item name="bottomNavigationStyle">@style/CustomNavigationView</item>
        <item name="editTextStyle">@style/CustomEditTextAppThemeLight</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/background_light</item>
    </style>

    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="CustomTextViewComment" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="CustomCardStyleAddFragment" parent="CardView.Light">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="android:outlineSpotShadowColor">@color/akcient_light</item>
        <item name="android:outlineAmbientShadowColor">@color/akcient_light</item>
    </style>

    <style name="CustomCardNoMargin" parent="CardView.Light">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="background">@drawable/checked_icon</item>
        <item name="android:outlineSpotShadowColor">@color/akcient_light</item>
        <item name="android:outlineAmbientShadowColor">@color/akcient_light</item>
    </style>

    <style name="CustomCardStyleNormal" parent="CardView.Light">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:elevation">5dp</item>
        <item name="background">@drawable/checked_icon</item>
        <item name="android:outlineSpotShadowColor">@color/akcient_light</item>
        <item name="android:outlineAmbientShadowColor">@color/akcient_light</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="CustomCardStyleImage" parent="CardView.Light">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
        <item name="android:outlineSpotShadowColor">@color/akcient_light</item>
        <item name="android:outlineAmbientShadowColor">@color/akcient_light</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="CustomImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">
            @drawable/custom_button_and_dialog_fragment_background_light
        </item>
        <item name="tint">@color/akcient_light</item>
    </style>


    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/element_light</item>
        <item name="backgroundTint">@color/element_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/akcient_light</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
    </style>

    <style name="TypoldTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/typold</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomEditTextAppThemeLight" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:background">@color/element_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHighlight">@color/color_4</item>
    </style>

    <style name="CustomEditTextAppThemeDark" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:background">@drawable/round_outline</item>
        <item name="android:textColorHighlight">@color/color_4</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="CustomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemPaddingTop">16dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="itemIconTint">@drawable/bottom_nav_selector</item>

        <item name="android:background">@color/element_light</item>
    </style>

    <style name="CustomCheckBoxEditTextAddFragment" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ic_edit</item>
        <item name="android:checkMarkTint">@color/akcient_light</item>
        <item name="android:background">
            @drawable/custom_button_and_dialog_fragment_background_light
        </item>
    </style>

    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:checkMarkTint">@color/akcient_light</item>
        <item name="android:background">@drawable/add_category_selector_list_fragment</item>
    </style>

    <style name="BasePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupAnimationStyle">@animator/nav_default_exit_anim</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/typold</item>
    </style>

    <style name="DarkPopupTheme" parent="BasePopupMenu">
        <item name="android:backgroundTint">@color/background_dark</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:iconTint">@color/akcient_dark</item>
    </style>

    <style name="LightPopupTheme" parent="BasePopupMenu">
        <item name="android:backgroundTint">@color/background_light</item>
        <item name="android:textColor">@color/element_dark</item>
        <item name="android:iconTint">@color/akcient_light</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="CustomTextViewSearchFragment" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:textColor">@color/akcient_light</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="Theme.MySQLite.Fullscreen" parent="Theme.MySQLite">
        <item name="android:actionBarStyle">@style/Widget.Theme.MySQLite.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MySQLite.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>